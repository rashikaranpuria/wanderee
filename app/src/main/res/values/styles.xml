<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="section_title" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="default_text" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textMedium</item>
    </style>

    <style name="default_text_dark_small" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="low_lighted_text" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textLight</item>
    </style>

    <style name="default_info_label" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_mini</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorInfo</item>
    </style>

</resources>
